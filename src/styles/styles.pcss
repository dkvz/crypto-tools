@tailwind base;
@tailwind components;
@tailwind utilities;

body {
  font-family: sans-serif;
}

.btn {
  @apply bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:ring-2 focus:ring-blue-200;
}

.toggle-btn {
  @apply flex cursor-pointer;
}

.toggle-btn span {
  @apply block flex-1 text-center p-2 text-lg;
}

.toggle-btn input {
  @apply invisible absolute;
}

.toggle-btn input:checked + span {
  @apply border-b-8 border-green-300;
}